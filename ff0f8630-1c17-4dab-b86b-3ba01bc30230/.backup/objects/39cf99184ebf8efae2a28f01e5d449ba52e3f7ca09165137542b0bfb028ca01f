include $(TOPDIR)/rules.mk

PKG_NAME:=luci-app-schoolnet
PKG_VERSION:=1.0
PKG_RELEASE:=1

PKG_MAINTAINER:=Xiaohei <xiaohei@cyber.elf>
PKG_LICENSE:=MIT

include $(INCLUDE_DIR)/package.mk

define Package/luci-app-schoolnet
  SECTION:=luci
  CATEGORY:=LuCI
  SUBMENU:=3. Applications
  TITLE:=LuCI support for SchoolNet Auth
  PKGARCH:=all
endef

define Package/luci-app-schoolnet/description
  LuCI interface for School Network Authentication.
endef

define Build/Compile
endef

define Package/luci-app-schoolnet/install
	$(INSTALL_DIR) $(1)/usr/lib/lua/luci
	$(CP) ./luasrc/* $(1)/usr/lib/lua/luci/
	$(INSTALL_DIR) $(1)/etc/config
	$(INSTALL_CONF) ./root/etc/config/schoolnet $(1)/etc/config/schoolnet
	$(INSTALL_DIR) $(1)/etc/init.d
	$(INSTALL_BIN) ./root/etc/init.d/schoolnet $(1)/etc/init.d/schoolnet
	$(INSTALL_DIR) $(1)/usr/sbin
	$(INSTALL_BIN) ./root/usr/sbin/schoolnet-auth $(1)/usr/sbin/schoolnet-auth
endef

$(eval $(call BuildPackage,luci-app-schoolnet))